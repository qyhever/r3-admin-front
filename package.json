{
  "name": "r3-admin-front",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.10.0"
  },
  "scripts": {
    "check": "node -e \"const semver = require('semver'); const currentNodeVersion = process.versions.node; if (!semver.satisfies(currentNodeVersion, '>=18.10.0 || >=20.10.0')) { console.error('❌ 错误: 需要Node.js版本>=18.10.0或>=20.10.0，当前版本为' + currentNodeVersion); process.exit(1); } else { console.log('✓ Node.js版本' + currentNodeVersion + '符合要求'); }\"",
    "preinstall": "npx only-allow pnpm && npm run check",
    "predev": "npm run check",
    "dev": "vite",
    "start": "npm run dev",
    "build:test": "vite build --mode test",
    "build:prod": "vite build --mode prod",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "alova": "^3.3.3",
    "dayjs": "^1.11.13",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.513.0",
    "pinia": "^3.0.1",
    "swiper": "^11.2.8",
    "tdesign-vue-next": "^1.13.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "@tsconfig/node22": "^22.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-vue": "~10.0.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "jiti": "^2.4.2",
    "mockjs": "^1.1.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "semver": "^7.7.2",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-checker": "^0.9.3",
    "vite-plugin-mock": "^3.0.2",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  }
}
